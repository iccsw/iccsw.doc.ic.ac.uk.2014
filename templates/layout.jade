doctype
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='/2014/css/bootstrap.css')
      link(rel='stylesheet', href='/2014/css/ss-social.css')
      link(rel='stylesheet', href='/2014/css/app.css')
      <!--[if lt IE 9]>
      script(src='/js/html5shiv.js')
      <![endif]-->
      include analytics
      +analytics('UA-22691589-4')
  body(class=bodyclass)
    nav.navbar.navbar-fixed-top.navbar-inverse(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/2014/', title=locals.name, rel='home')
            img(alt=locals.name, height=18, src='/2014/img/logo.png')
        .collapse.navbar-collapse.nav-collapse
          include menu
          ul.nav.navbar-nav
            +menu('Call for Papers', '/2014/cfp.html')
            +menu('Keynotes', '/2014/keynotes.html')
            +menu('Location', '/2014/location.html')
            +menu('Organisation', '/2014/organisation.html')
            +menu('Registration', '/2014/registration.html')
            +menu('FAQ', '/2014/faq.html')
    .container
      header.subhead
        a(href=locals.url)
          img(alt=locals.name, src='/2014/img/queens-tower.jpg')
        block subhead
      section.content
        block content
    footer.footer
      .container
        block footer
          .pull-right
            ul.services.list-unstyled
              li.twitter
                a.ss-icon.ss-social-circle.ss-twitter(href='https://twitter.com/iccsw14')
              li.facebook
                a.ss-icon.ss-social-circle.ss-facebook(href='https://facebook.com/ICCSWorkshop')
          p.credit
            Copyright &copy; 2014
            a(href='http://acm.doc.ic.ac.uk/') Imperial College London ACM Student Chapter
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    script(src='/2014/js/bootstrap.js')
    script(src='/2014/js/app.js')
